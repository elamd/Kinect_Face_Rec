<Window x:Class="Kinect2FaceBasics_NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1080" Width="1920" Closing="Window_Closing">
    <Viewbox>
        <Grid Width="1920" Height="1080">
            <Image Name="camera" Margin="0,0,0,0" Width="640" Height="480" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <Canvas Name="canvas" Margin="0,10,468,-10" Width="1452" Height="1080" >
                <Ellipse Name="ellipseEyeLeft" Style="{StaticResource EyeStyle}" Visibility="Collapsed"/>
                <Ellipse Name="ellipseEyeRight" Style="{StaticResource EyeStyle}" Visibility="Collapsed" />
                <Ellipse Name="ellipseNose" Style="{StaticResource NoseStyle}" Visibility="Collapsed"/>
                <Ellipse Name="ellipseMouth" Style="{StaticResource MouthStyle}" Visibility="Collapsed"/>
            </Canvas>
            <DataGrid Canvas.Left="40" Canvas.Top="40" Background="Red" Margin="1452.583,0,10,10"/>

        </Grid>
    </Viewbox>
</Window>
